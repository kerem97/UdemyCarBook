@model List<ResultCarWithBrandsDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araç Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Arabalarla ilgili yapılabilecek işlemler buradan yapılabilir.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Marka</th>
                                        <th>Model</th>
                                        <th>Vites Türü</th>
                                        <th>Km</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Detaylar</th>
                                        <th>Site</th>
                                        <th>Fiyat Bilgileri</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var x in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@x.Brand</td>
                                            <td>@x.Model</td>
                                            <td>@x.Transmission</td>
                                            <td>@x.Km</td>
                                            <td><a href="/AdminCar/RemoveCar/@x.CarId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/AdminCar/UpdateCar/@x.CarId" class="btn btn-outline-warning">Güncelle</a></td>
                                            <td><a href="/CarList/CarDetail/@x.CarId" class="btn btn-outline-dark">Detaylar</a></td>
                                            <td><a href="/CarList/CarDetail/@x.CarId" class="btn btn-outline-primary">Sitede gör</a></td>
                                            <td><a href="/CarList/CarDetail/@x.CarId" class="btn btn-outline-secondary">Fiyat Bilgileri</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <td><a href="/AdminCar/CreateCar/" class="btn btn-outline-primary">Yeni Araç Girişi</a></td>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>