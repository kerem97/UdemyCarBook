@model CreateAuthorRequest

@{
    ViewData["Title"] = "CreateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Yazar Girişi</h4>
                        <p class="card-subtitle mb-4">Yazar ile ilgili özellikleri aşadağıki kutucağa giebilirsiniz. Veri girişinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Hakkımda Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Yazar Başlığı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Hakkımda Açıklaması</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Description" placeholder="Yazar Açıklaması Giriniz ">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Hakkımda Görseli</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="ImageUrl" placeholder="Yazar Görsel Url Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>