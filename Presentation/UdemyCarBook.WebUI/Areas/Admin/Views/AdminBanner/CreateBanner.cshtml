@model CreateBannerRequest
@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Banner Girişi</h4>
                        <p class="card-subtitle mb-4">Banner ile ilgili özellikleri aşadağıki kutucağa giebilirsiniz. Veri girişinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Banner Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Title" placeholder="Banner Başlığı Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Banner Açıklaması</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Description" placeholder="Banner Açıklaması Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Video Url</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="VideoUrl" placeholder="Video Url Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Video Açıklaması</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="VideoDescription" placeholder="Video Açıklaması Girişi Yapınız">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Markayı Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>