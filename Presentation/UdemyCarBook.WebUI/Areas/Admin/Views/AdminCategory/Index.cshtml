@model List<ResultCategoryResponse>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Kategori Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Kategori ile ilgili yapılabilecek işlemler buradan yapılabilir.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Kategori Adı</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Kategoriye Ait Bloglar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var x in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@x.Name</td>
                                            <td><a href="/Admin/AdminCategory/RemoveCategory/@x.CategoryId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminCategory/UpdateCategory/@x.CategoryId" class="btn btn-outline-warning">Güncelle</a></td>
                                            <td><a href="/Admin/AdminCategory/UpdateCategory/@x.CategoryId" class="btn btn-outline-warning">Bloglar</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <td><a href="/Admin/AdminCategory/CreateCategory/" class="btn btn-outline-primary">Yeni Kategori Girişi</a></td>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>